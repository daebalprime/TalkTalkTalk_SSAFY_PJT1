<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.d204.chat.dao.ChatDao">
	<!-- 전체 채팅세션 확인하기 -->
	<select id="findAllRoom" resultType="ChatSession">
		SELECT *
		FROM "SSAFY_PJT1".chat_session;
	</select>
	<select id="findMyRoom" resultType="ChatSession">
		SELECT *
		FROM "SSAFY_PJT1".chat_session
		WHERE fk_client_idx = #{id};
	</select>
	
	<!-- session id로 방 정보 가져오기 -->
	<select id="findRoomBySessionId" resultType="ChatSession">
		SELECT *
		FROM "SSAFY_PJT1".chat_session
		WHERE session_id = #{id} AND status = 'OPEN';
	</select>

	<!-- 세션 등록 -->
	<insert id="createChatRoom" parameterType="ChatSession">
		INSERT INTO "SSAFY_PJT1".chat_session ("session_id","created_at","fk_created_by_idx","fk_client_idx","status","qna_history")
		values ( #{session_id}, now(), #{fk_created_by_idx}, #{fk_client_idx},#{status}, #{qna_history});
	</insert>

	<update id="modifyChatStatus" parameterType="ModifyRoomStatusReq">
		UPDATE "SSAFY_PJT1".chat_session
		SET "status" = #{status}
		WHERE session_id = #{sessionId};
	</update>

	<!-- 메세지 DB에 등록 -->
	<insert id="pushMessage" parameterType="ChatMessage">
		INSERT INTO "SSAFY_PJT1".chat_message ("message", "fk_author_idx", "created", "deleted", "fk_session_id", "type")
		values (#{message}, #{fk_author_idx} , now(), false, #{fk_session_id}, #{type});
	</insert>

	<select id="getAllMessages" resultType="ChatMessage">
		SELECT *
		FROM "SSAFY_PJT1".chat_message;
	</select>

	<select id="getMessagesBySessionId" parameterType="String" resultType="ChatMessage">
		SELECT *
		FROM "SSAFY_PJT1".chat_message
		WHERE fk_session_id = #{sessionId};
	</select>
</mapper>