<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.d204.db.repository.AnswerDao"> 
	<!-- 답변 전체 조회 -->
	<select id="retrieveAnswer" resultType="Answer">
		SELECT pk_idx, "content", fk_next_idx
		FROM "SSAFY_PJT1".answer;
	</select>
	
	<!-- 답변 상세 조회 -->
	<select id="detailAnswer" resultType="Answer">
		SELECT pk_idx, "content", fk_next_idx
		FROM "SSAFY_PJT1".answer
		where pk_idx = #{pk_idx};
	</select>

	<!-- 답변 등록 -->
	<insert id="writeAnswer" parameterType="Answer">
		INSERT INTO "SSAFY_PJT1".answer ("content", "fk_next_idx")
		values ( #{content}, #{fk_next_idx} );
	</insert>
	
	<!-- 답변 수정 -->
	<update id="updateAnswer" parameterType="Answer">
		update "SSAFY_PJT1".answer 
		set content = #{content}
		where pk_idx = #{pk_idx};
	</update>

	<!-- 답변 삭제 -->
	<delete id="deleteAnswer" parameterType="int">
		delete from "SSAFY_PJT1".answer 
		where pk_idx = #{pk_idx};
	</delete>
	
	<!-- 연계 질문 수정 -->
	<update id="updateNextQuestion" parameterType="Answer">
		update "SSAFY_PJT1".answer 
		set fk_next_idx = #{fk_next_idx}
		where pk_idx = #{pk_idx};
	</update>
</mapper>